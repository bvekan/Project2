}
void createMenu(){
  keypad(stdscr, TRUE);
  ch = getch();
  switch(ch){
  case KEY_DOWN:
    break;
  case KEY_UP:
    break;
  case KEY_LEFT:
    break;
  case KEY_RIGHT:
    break;
  }
}
void printMenu(WIDOW* menu, int highlight ){
  box(menu, 0, 0);
  for(int i=0; i<= choicenum; i++){
    if(highlighter== i){
      printw("");
    wattron(menu, A_REVERSE);
    mvmprintw("");
    wattron(menu, A_REVERSE);
    else{
      mvmprintw(menu, y, x, menuch[i]);
    }
    y++;
  }
}

